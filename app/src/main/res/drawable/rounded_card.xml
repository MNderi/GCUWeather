<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_hovered="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Default background color -->
            <corners android:radius="25dp" /> <!-- Adjust the radius to change the roundness -->
        </shape>
    </item>
    <item android:state_active="true"  android:state_hovered="true" android:state_focused="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/bright_teal" /> <!-- Background color when hovered or focused -->
            <corners android:radius="25dp" /> <!-- Adjust the radius to change the roundness -->
        </shape>
    </item>
</selector>

